<%# @portfolio_items.each_with_sortable_id do |portfolio_item, sortable_id|%>
<div class="col-md-4 card-container" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <img src="<%= portfolio_item.thumb_img %>">
    <div class="card-body">
      <h3 class="card-text"><%= link_to portfolio_item.title,portfolio_show_path(portfolio_item) %></h3>
      <h6 class="card-text"><strong><%= portfolio_item.subtitle %></strong></h6>
    </div>
  </div>
</div>
<%# end %>
